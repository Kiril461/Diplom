cd backend                  # Перейти в папку backend
composer install           # Встановити всі залежності проекту
cp .env.example .env       # Створити копію файлу .env.example як .env
# Відкрий файл .env та налаштуй параметри (DB, Mailgun тощо) перед наступним кроком
php artisan key:generate   # Згенерувати унікальний ключ додатку
php artisan migrate --seed # Запустити міграції та посіяти початкові дані в базу
php artisan serve          # Запустити локальний сервер для тестування проекту
